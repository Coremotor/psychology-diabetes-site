        min-height: 100vh;
        padding: 0;
        margin: 0;
      }

      .layout-container {
        display: flex;
        flex-direction: column;
        min-width: 360px;
        height: 100vh;
        overflow-x: hidden;
        margin: 0 auto;
      }

