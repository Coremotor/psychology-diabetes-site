---
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import ClientsTypes from "components/ClientsTypes.astro";
import AboutMe from "components/AboutMe.astro";
import Problems from "components/Problems.astro";
import Consultation from "components/Consultation.astro";
import Details from "components/Details";
import Therapy from "components/Therapy.astro";
import Carousel from "components/Carousel.astro";
import Carousel_v2 from "components/Carousel_v2.astro";
import { diploms, makePhotosArray } from "data/pictures";
import { reviews } from "data/pictures";
import ScrollUp from "components/ScrollUp.astro";
---

<Layout title="Клинический психолог с сахарным диабетом" isMainPage={true}>
  <Hero desc="Психологическая поддержка людей с сахарным диабетом" />
  <ClientsTypes />
  <Problems />
  <AboutMe />
  <Consultation />
  <Details client:load />
  <Therapy />
  <Carousel
    DOMId="education"
    title="Образование"
    images={diploms}
    withLink={true}
    withBackground={true}
    withTitle={true}
  />
  <Carousel_v2
    DOMId="reviews"
    title="Отзывы"
    images={reviews}
    withBackground={false}
  />
  <!--<Carousel-->
  <!--        DOMId="certificates"-->
  <!--        title="Сертификаты"-->
  <!--        images={certificates}-->
  <!--        withLink={false}-->
  <!--        withBackground={true}-->
  <!--        withTitle={false}-->
  <!--/>-->
  <Carousel_v2
    DOMId="gallery"
    title="Галерея"
    images={makePhotosArray()}
    withBackground={true}
  />
  <ScrollUp />
</Layout>
