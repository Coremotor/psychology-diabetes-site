---
import { diplomsRoutes } from "data/routes";
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import About from "layouts/About.astro";
import AboutDiplom from "components/AboutDiplom.astro";
import Image from "components/Image.astro";
import { routesList } from "data/routes";
import { nextPage } from "helpers";
import Buttons from "components/Buttons.astro";

const list = [
  "психологические аспекты проблемы переедания и избыточного веса;",
  "диагностика расстройств пищевого поведения;",
  "исследование образа тела;",
  "психотерапии расстройств пищевого поведения;",
  "психология навязчивого аппетита;",
  "проблемы мотивации при снижении веса;",
  "телесная терапия при нарушениях пищевого поведения.",
];

const next = nextPage(routesList(diplomsRoutes), Astro.url.pathname);
---

<Layout title="Психология пищевого поведения" isMainPage={false}>
  <Hero
    desc="Квалификация - консультант по коррекции веса и психологии пищевого поведения"
    imgUrl="/assets/images/eating-behavior.png"
  />
  <Image src="/assets/images/diploms/eating-behavior.jpg" />
  <Image src="/assets/images/diploms/nutritionology.jpg" maxWidth={460} />

  <About DOMId="eating-behavior" title="Область профессиональной деятельности">
    <AboutDiplom
      desc="Пищевое поведение – это отношение к пище и ее приему, включающее в себя установки и привычки, формы поведения и эмоциональное отношение к еде. Специалист по психологии пищевого поведения исследует пищевое поведение, механизмы формирования нарушений отношения к пище. Исследование включает в себя биологические, психологические факторы, влияние наследственности и склонности характера и личности к зависимости. Также рассматривается немаловажный фактор влияния семейных традиций и психологической обстановки в семье, социального окружения человека. Пищевые привычки формируются под влиянием семьи и общества, собственного опыта, свойств личности. Специалист по коррекции пищевого поведения грамотно подбирает метод помощи, исходя из комплекса причин, вызвавших нарушения, помогает вернуть вес к норме, а человека – к полноценной жизни."
      list={list}
      vkr="Практикумы:"
      diplom="«по телесной терапии»."
    />
  </About>

  <Buttons link={next} />
</Layout>
