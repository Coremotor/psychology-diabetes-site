---
import { diplomsRoutes, routesList } from "data/routes";
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import About from "layouts/About.astro";
import AboutDiplom from "components/AboutDiplom.astro";
import Image from "components/Image.astro";
import { nextPage } from "helpers";
import Buttons from "components/Buttons.astro";

const list = [
  "психология семьи, детская практическая психология;",
  "семейная диагностика;",
  "детско-родительские отношения, конфликты (причины, методы диагностики, консультирования и терапии);",
  "психотерапия в работе с семьей (системно-семейная психотерапия, психодрама, трансактный анализ);",
  "работа в кризисных ситуациях (развод, физическое насилие, инцест, утраты, рождение ребенка с особыми потребностями);",
  "психологическое консультирование по проблемам в детско-родительских отношениях. Тренинг детско-родительских отношений.",
];

const next = nextPage(routesList(diplomsRoutes), Astro.url.pathname);
---

<Layout title="Семейная психология" isMainPage={false}>
  <Hero
    desc="Семейное и детское психологическое консультирование"
    imgUrl="/assets/images/family.png"
  />
  <Image src="/assets/images/diploms/family.jpg" />

  <About DOMId="family" title="Область профессиональной деятельности">
    <AboutDiplom
      desc="К семейному психологу обращаются люди, которые хотят преодолеть кризис в супружеских отношениях, сгладить конфликт поколений, восстановить доверительное общение с детьми, пережить развод, разобраться с созависимыми отношениями. Комплексная психологическая работа со всеми членами семьи часто эффективнее, чем индивидуальная терапия. Персональная проработка проблем сводится на нет, если травмирующие поведенческие сценарии домочадцев не меняются."
      list={list}
      diplom="«по семейной терапии»."
      vkr="Практикум:"
    />
  </About>

  <Buttons link={next} />
</Layout>
